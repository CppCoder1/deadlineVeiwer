<UserControl x:Class="deadlineViewer.DeadlineVeiwerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid Name="main_grid">
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" HorizontalAlignment="Left" Foreground="White" FontStyle="Oblique">DeadlineVeiwer</TextBlock>
            <Button Content="Update!" Click="update_button_Click" Width="80" Height="20" Name="update_button" Background="LightPink" Foreground="Black" Margin="6,-6,0,0" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
